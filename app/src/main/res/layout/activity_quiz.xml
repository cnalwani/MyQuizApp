<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/View_Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 0"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/Que_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question : 1/x"
        android:layout_below="@id/View_Score"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:30"
        android:textSize="40sp"
        android:id="@+id/text_view_countdown"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here will be question to ask?"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/radio_group"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_but1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 1"/>

            <RadioButton
                android:id="@+id/radio_bu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 2"/>

            <RadioButton
                android:id="@+id/radio_bu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oprion 3"/>

    </RadioGroup>

    <Button
        android:id="@+id/button_confirm_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_marginTop="16dp"
        android:text="Confirm"/>


</RelativeLayout>